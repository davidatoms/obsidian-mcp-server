{
  "name": "obsidian-mcp-server",
  "version": "1.1.0",
  "description": "MCP server for Obsidian vault interaction and knowledge management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "obsidian-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "init": "node dist/init.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "obsidian",
    "mcp",
    "model-context-protocol",
    "knowledge-management",
    "markdown",
    "notes",
    "claude",
    "ai",
    "vault"
  ],
  "author": "davidatoms",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidatoms/obsidian-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/davidatoms/obsidian-mcp-server/issues"
  },
  "homepage": "https://github.com/davidatoms/obsidian-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "gray-matter": "^4.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.9",
    "zod-to-json-schema": "^3.24.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
